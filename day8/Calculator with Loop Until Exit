while True:
    op = input("Enter operation (+, -, *, /) or 'exit' to quit: ")
    if op == 'exit':
        break
    a = float(input("Enter first number: "))
    b = float(input("Enter second number: "))
    
    if op == '+':
        print(a + b)
    elif op == '-':
        print(a - b)
    elif op == '*':
        print(a * b)
    elif op == '/':
        print(a / b if b != 0 else "Error: Division by zero")
    else:
        print("Invalid operator")
